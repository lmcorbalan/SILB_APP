<%= form_for [:admin, @picture], :validate => true, :html => {:multipart => true} do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :imageable_id %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "span6"%>

  <%= f.file_field :image %>

  <br>

  <p><%= f.submit t('save'), class: "btn btn-large btn-primary" %></p>

<% end %>