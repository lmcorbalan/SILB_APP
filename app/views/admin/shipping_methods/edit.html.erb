<% provide(:title, t('shipping_method')) %>
<% provide(:section, t('shipping_method')) %>

<div class="row">
  <div class="span6">
    <%= form_for [:admin, @shipping_method] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= label_tag :activate, nil, :class => 'checkbox' do %>
        <%= t('activerecord.attributes.shipping_method.state') %>
        <%= check_box_tag :activate, 1, @shipping_method.active? %>
      <% end %>
    </p>
      <%= f.submit t('update'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>