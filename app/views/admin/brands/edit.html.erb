<% provide(:title, t('brand')) %>
<% provide(:section, t('brand')) %>

<div class="row">
  <div class="span12">
    <%= form_for [:admin, @brand], :validate => true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "span6" %>

      <%= label_tag :activate, nil, :class => 'checkbox' do %>
        <%= t('activerecord.attributes.brand.state') %>
        <%= check_box_tag :activate, 1, @brand.active? %>
      <% end %>
    </p>
      <%= f.submit t('update'), class: "btn btn-large btn-primary" %>
    <% end %>

    <h3><%= t('images') %></h3>
    <hr class="bs-docs-separator">
    <%= render 'shared/picture_upload', object: @brand %>

  </div>
</div>