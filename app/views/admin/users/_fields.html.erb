<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name, class: "span6"%>

<%= f.label :email %>
<%= f.text_field :email, class: "span6" %>

<%= f.label :password %>
<%= f.password_field :password, :validate => { :length => true }, class: "span6" %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, :validate => { :presence => true }, class: "span6" %>