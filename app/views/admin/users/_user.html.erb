<tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td>
      <%= link_to t('edit'), edit_admin_user_path(user) %>
      <% if !current_user?(user) %>
        | <%= link_to t('remove'), [:admin, user],
            confirm: t('are_you_sure_you_want_to_delete_the_user?', :user => user.name),
            method: :delete %>
      <% end %>
    </td>
</tr>