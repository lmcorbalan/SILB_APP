<% provide(:title, t('region')) %>
<% provide(:section, t('region')) %>

<div class="row">
  <div class="span12">
    <%= form_for [:admin, @region], :validate => true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "span6" %>

      <%= label_tag :activate, nil, :class => 'checkbox' do %>
        <%= t('activerecord.attributes.region.state') %> <%= check_box_tag :activate, 1, @region.active? %>
      <% end %>
    </p>
      <%= f.submit t('update'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>