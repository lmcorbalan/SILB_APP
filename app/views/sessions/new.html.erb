<% provide(:title, t('sign_in')) %>
<% provide(:section, t('sign_in')) %>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>

      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <p><%= link_to t('forgotten_password?'), new_password_reset_path %></p>

      <%= label_tag :remember_me, nil, :class => 'checkbox' do %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %><%= t('remember_me') %>
      <% end %>

      <%= submit_tag t('sign_in'), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%= t('new_user?') %> <%= link_to t('sign_up_now'), signup_path %></p>
  </div>
</div>