<% provide(:title, t('password_rest')) %>
<% provide(:section, t('password_rest')) %>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_resets_path, :method => :post do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>

      <%= submit_tag t('reset'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
